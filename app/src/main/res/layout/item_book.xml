<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="book"
            type="org.sssta.model.Book"/>
    </data>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardElevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="14dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:rating="1"
                    android:id="@+id/book_rating_bar"
                    style="?android:attr/ratingBarStyleSmall" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/book_evaluate"
                    android:textColor="#FFBB00"
                    android:textSize="@dimen/text_size_small"
                    android:id="@+id/book_text_evaluate"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_color_light"
                    android:text='@{String.valueOf(1)}'
                    android:id="@+id/book_text_name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_color_light"
                    android:text="@{book.author}"
                    android:id="@+id/book_text_author"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_color_light"
                    android:text="@{book.wordCount}"
                    android:id="@+id/book_text_count"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_color_dark"
                    android:text="@{book.brief}"
                    android:id="@+id/book_text_brief"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>
